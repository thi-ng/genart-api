	"license": "Apache-2.0",
	"type": "module",
	"scripts": {
		"start": "vite --host --open",
		"build": "tsc && vite build --base='./'",
		"build:api": "yarn build:lib && yarn build:adapter",
		"build:lib": "yarn esbuild --bundle --platform=browser --minify --target=es2022 --outfile=lib.min.js src/genart-api.ts",
		"build:adapter": "yarn esbuild --bundle --platform=browser --minify --target=es2022 --outfile=adapter.min.js src/adapters/urlparams.ts",
		"preview": "vite preview --host --open"
	},
	"devDependencies": {
		"typescript": "^5.5.4",
		"vite": "^5.4.3",
		"vite-plugin-html": "^3.2.2"
	},
	"sideEffects": false,
	"dependencies": {
		"@thi.ng/canvas": "^0.5.2",
		"@thi.ng/geom": "^8.1.7",
		"@thi.ng/hiccup-canvas": "^3.1.16",
		"@thi.ng/imgui": "^2.3.1",
		"@thi.ng/layout": "^3.1.1",
		"@thi.ng/ramp": "^3.3.0",
		"@thi.ng/rdom": "^1.7.1",
		"@thi.ng/rdom-forms": "^0.3.29",
		"@thi.ng/rstream": "^9.0.2",
		"@thi.ng/rstream-gestures": "^5.0.90",
		"@thi.ng/vectors": "^7.12.0"
	}
